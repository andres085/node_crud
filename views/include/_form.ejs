<form action='/api/users' method="POST" id="add_user">
    <div class="new-user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id">
            <input type="text" name="name" id="name" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Email</label>
            <input type="text" name="email" id="email" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" id="">
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" id="">
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" id="">
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" id="">
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>